# Server
PORT=3000
NODE_ENV=development

# Redis (optional - enables async job processing)
# REDIS_URL=redis://localhost:6379

# Storage
DATA_DIR=./data
TEMP_DIR=/tmp/tiktok-editor
MAX_FILE_SIZE=524288000

# Worker (only used with Redis)
WORKER_CONCURRENCY=2

# Video settings
REACTION_DURATION=4.5
OUTPUT_WIDTH=1080
OUTPUT_HEIGHT=1920

# S3-compatible storage (optional - e.g., Cloudflare R2)
# S3_ENDPOINT=https://xxx.r2.cloudflarestorage.com
# S3_REGION=auto
# S3_BUCKET=tiktok-editor
# S3_ACCESS_KEY_ID=xxx
# S3_SECRET_ACCESS_KEY=xxx
# S3_PUBLIC_URL=https://your-public-url.com

# Authentication (optional)
# AUTH_TOKEN=your-secret-token
