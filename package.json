{
  "name": "tiktok-editor",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "build": "npm run build:server && npm run build:worker",
    "build:server": "esbuild src/server.ts --bundle --sourcemap --platform=node --format=esm --packages=external --outfile=dist/server.js",
    "build:worker": "esbuild src/worker.ts --bundle --sourcemap --platform=node --format=esm --packages=external --outfile=dist/worker.js",
    "start": "node ./dist/server.js",
    "start:with-worker": "concurrently --names \"SERVER,WORKER\" --prefix-colors \"blue,green\" \"node ./dist/server.js\" \"node ./dist/worker.js\"",
    "start:server": "node ./dist/server.js",
    "start:worker": "node ./dist/worker.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/zod-openapi": "^1.1.3",
    "@scalar/hono-api-reference": "^0.9.20",
    "bullmq": "^5.60.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "hono": "^4.9.9",
    "ioredis": "^5.8.0",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "esbuild": "0.25.10",
    "tsx": "^4.7.1",
    "typescript": "^5.9.3"
  },
  "imports": {
    "~/*": "./src/*"
  }
}
